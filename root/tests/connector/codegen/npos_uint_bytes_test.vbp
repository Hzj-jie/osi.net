
##DEFAULT TYPE npos_uint
##DEFAULT ACCEPT_ZERO True
##DEFAULT ACCEPT_MAX True
##DEFAULT HAS_NPOS True
##DEFAULT HAS_INF True

Public Class ##TYPE##_bytes_test
    Inherits [case]

    Public Overrides Function run() As Boolean
        For i As Int32 = 0 To 1024 * 1024 * 8 - 1
            Dim x As ##TYPE## = Nothing
            If rnd_bool() Then
                x = rnd_int64()
            Else
                x = rnd_uint64()
            End If
            Dim b() As Byte = Nothing
            assert_true(x.to_bytes(b))
            Dim y As ##TYPE## = Nothing
            Dim p As UInt32 = uint32_0
            assert_true(##TYPE##.from_bytes(b, y, p))
            assert_equal(p, array_size(b))
            assert_equal(x, y)
            assert_true(##TYPE##.from_bytes(b, uint32_0, array_size(b), y))
            assert_equal(x, y)
            Dim o() As Byte = Nothing
            ReDim o(-1)
            assert_false(y.to_bytes(o, uint32_0))
#If ##ACCEPT_ZERO## AndAlso ##ACCEPT_MAX## AndAlso (##HAS_NPOS## OrElse ##HAS_INF##) Then
#If ##HAS_NPOS## Then
            If x.npos() Then
#ElseIf ##HAS_INF## Then
            If x.infinite() Then
#Else
            FAILURE
#End If
                ReDim o(sizeof_int8 - uint32_1)
            Else
                ReDim o(##TYPE##.sizeof_value + sizeof_int8 - uint32_1)
            End If
            assert_true(y.to_bytes(o, uint32_0))
            assert_equal(memcmp(b, o), 0)
#End If
            ReDim o(##TYPE##.sizeof_value + sizeof_int8)
            Dim offset As UInt32 = uint32_0
            assert_true(y.to_bytes(o, offset))
            assert_equal(memcmp(b, o, offset), 0)
        Next
        Return True
    End Function
End Class

##UNDEF ACCEPT_ZERO
##UNDEF ACCEPT_MAX
##UNDEF HAS_NPOS
##UNDEF HAS_INF
